{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "use": "readonly",
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "no-param-reassign": "off",
    "camelcase": "off",
    "no-undef": "off",
    "no-multi-assign": "off",
    "no-await-in-loop": "off",
    "no-restricted-syntax": "off"
  }
}
